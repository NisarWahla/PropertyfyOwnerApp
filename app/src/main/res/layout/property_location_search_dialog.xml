<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/parent_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/noti_item_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@id/iconImageView"
            android:fontFamily="@font/manrope_medium"
            android:layout_marginStart="@dimen/_10sdp"
            android:clickable="true"
            android:ellipsize="marquee"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:focusable="true"
            android:text="are you there"
            android:textColor="@color/black_app"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/unselected_menu_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/tenant_view_color" />
    </RelativeLayout>
</layout>

