<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_above_back"
        tools:context=".activities.ManagementDetailActivity">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/action_ripple"
                android:contentDescription="@string/app_name"
                android:src="@drawable/back_white_icon" />

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/manrope_semibold"
                android:text="Contract ID: 62514"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_main_below">

                <RelativeLayout
                    android:id="@+id/company_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/txtCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center"
                        android:text="@string/company"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/companyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtCompany"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="Stark Rentals Association"
                        android:textAllCaps="false"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/company_layout"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/info_line_color" />

                <RelativeLayout
                    android:id="@+id/managerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_one"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center"
                        android:text="@string/manager"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/managerValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtManager"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="Jahan Al Makhtoum"
                        android:textAllCaps="false"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <View
                    android:id="@+id/managerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/managerLayout"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/info_line_color" />


                <RelativeLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/managerView"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center"
                        android:text="@string/email"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/emailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtEmail"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="maktoum@gmail.com"
                        android:textAllCaps="false"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <View
                    android:id="@+id/emailView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/emailLayout"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/info_line_color" />

                <RelativeLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailView"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center"
                        android:text="@string/phone_number"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/phoneValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtPhone"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="maktoum@gmail.com"
                        android:textAllCaps="false"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/_13sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/call_now_style"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/call_now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <View
                    android:id="@+id/phoneView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/phoneLayout"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/info_line_color" />

                <RelativeLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneView"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center"
                        android:text="@string/address"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/address_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_address"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="5 Bin Habis Street, Abu Dhabi, United Arab Emirates"
                        android:textAllCaps="false"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/address_layout"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/info_line_color" />

                <LinearLayout
                    android:id="@+id/contractLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_two"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/contractDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_regular"
                            android:gravity="center"
                            android:text="@string/contract_duration"
                            android:textAllCaps="false"
                            android:textColor="@color/hint_text_color"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/contractDurationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/contractDuration"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/manrope_semibold"
                            android:gravity="center"
                            android:text="28/12/23 - 28/12/24"
                            android:textAllCaps="false"
                            android:textColor="@color/black_app"
                            android:textSize="@dimen/_13sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/contractTerm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_regular"
                            android:gravity="center"
                            android:text="@string/contract_term"
                            android:textAllCaps="false"
                            android:textColor="@color/hint_text_color"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/contractTermValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/contractTerm"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/manrope_semibold"
                            android:gravity="center"
                            android:text="1 Year"
                            android:textAllCaps="false"
                            android:textColor="@color/black_app"
                            android:textSize="@dimen/_13sdp" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view_five"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/contractLayout"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/info_line_color" />

                <RelativeLayout
                    android:id="@+id/feeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_five"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center"
                        android:text="@string/management_fee"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/payment_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_fee"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="AED 10,000"
                        android:textAllCaps="false"
                        android:textColor="@color/black_app"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_six"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/feeLayout"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/info_line_color" />

                <TextView
                    android:id="@+id/documents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_six"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/manrope_semibold"
                    android:gravity="center"
                    android:text="@string/documents"
                    android:textAllCaps="false"
                    android:textColor="@color/black_app"
                    android:textSize="@dimen/_12sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pdf_document_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp"
                    android:layout_below="@id/documents"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingBottom="@dimen/_10sdp"
                    tools:listitem="@layout/contract_document_item" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>