<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/my_property_edit_back_round"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/requestLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_medium"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="Date: Sep 7, 2021"
                android:textAllCaps="false"
                android:textColor="@color/app_gray_main"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/check_ref_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="end"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/status"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_13sdp" />
            <TextView
                android:id="@+id/statusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="end"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text=" Completed"
                android:textAllCaps="false"
                android:textColor="@color/call_now_color"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/plumbing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/manrope_bold"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="Routine"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/time_and_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:fontFamily="@font/manrope_medium"
                android:lines="2"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:minLines="1"
                android:text="Inspection by: Sheikh jahanzaib"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:gravity="end">

                <TextView
                    android:id="@+id/check_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/download_inspection_round"
                    android:fontFamily="@font/manrope_regular"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</layout>