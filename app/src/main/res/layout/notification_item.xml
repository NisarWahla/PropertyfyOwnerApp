<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/noti_item_background">

        <ImageView
            android:id="@+id/noti_pic"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/notification_tab_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@id/dot_icon"
            android:layout_toEndOf="@id/noti_pic">

            <TextView
                android:id="@+id/txt_property_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_semibold"
                android:text="Maintenance"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_property_manager"
                android:fontFamily="@font/manrope_medium"
                android:text="your maintenance request has been resolved"
                android:textAllCaps="false"
                android:textColor="@color/app_gray_main"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/dot_icon"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dot_blue_icon" />


    </RelativeLayout>
</layout>