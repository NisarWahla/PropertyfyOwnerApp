<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/my_property_edit_back_round">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_20sdp">

            <TextView
                android:id="@+id/id_value"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center"
                android:background="@drawable/shimmer_round"
                android:textAllCaps="false"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_value"
                android:layout_marginTop="@dimen/_5sdp"
                android:lines="1"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:fontFamily="@font/manrope_medium"
                android:background="@drawable/shimmer_round"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/time_and_date"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/duration"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center_vertical"
                android:background="@drawable/shimmer_round"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_20sdp">

            <TextView
                android:id="@+id/check_ref_value"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/manrope_regular"
                android:background="@drawable/shimmer_round"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/rentalsAmount"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_ref_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_regular"
                android:background="@drawable/shimmer_round"
                android:textColor="@color/status_green_color"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/check_value"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentalsAmount"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shimmer_round"
                android:fontFamily="@font/manrope_regular"
                android:paddingHorizontal="@dimen/_14sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:textColor="@color/status_green_color"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


    </LinearLayout>
</layout>