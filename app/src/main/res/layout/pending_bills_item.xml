<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="2"
        android:background="@drawable/my_property_edit_back_round">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center"
                android:text="Invoice: 6397"
                android:textAllCaps="false"
                android:textColor="@color/app_gray_main"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/bank_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_value"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="Plumbing"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/propertyID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_transfer"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center_vertical"
                android:text="Property ID: 8723"
                android:textColor="@color/app_gray_main"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp">

            <TextView
                android:id="@+id/dueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:text="Due: 06-11-2023"
                android:textAllCaps="false"
                android:textColor="@color/overdue_status_clr"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/transfer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dueDate"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_bold"
                android:text="AED 10,000"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/check_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transfer_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/pay_now_round"
                android:fontFamily="@font/manrope_semibold"
                android:paddingHorizontal="@dimen/_14sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/pay_now"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>


    </LinearLayout>
</layout>