<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/my_property_edit_back_round">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_20sdp">

            <TextView
                android:id="@+id/id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center"
                android:text="Invoice: 6397"
                android:textAllCaps="false"
                android:textColor="@color/app_gray_main"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/bank_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_value"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="Bank Transfer"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/paidDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_transfer"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center_vertical"
                android:text="Paid on: 29/12/24"
                android:textColor="@color/app_gray_main"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_20sdp">

            <TextView
                android:id="@+id/check_ref_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/manrope_semibold"
                android:text="Check/Ref #3947"
                android:textAllCaps="false"
                android:textColor="@color/app_gray_main"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/transfer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_ref_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_bold"
                android:text="AED 60,000"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transfer_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="@string/status"
                    android:textColor="@color/black_app"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/check_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Paid"
                    android:textColor="@color/status_green_color"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</layout>