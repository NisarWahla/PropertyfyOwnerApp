<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/my_property_edit_back_round">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_20sdp">

            <TextView
                android:id="@+id/id_value"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:background="@drawable/shimmer_round"
                android:textAllCaps="false"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/bank_transfer"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_value"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:background="@drawable/shimmer_round"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/time_and_date"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_transfer"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center_vertical"
                android:background="@drawable/shimmer_round"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_20sdp">

            <TextView
                android:id="@+id/check_ref_value"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/manrope_regular"
                android:gravity="end"
                android:background="@drawable/shimmer_round"
                android:textAllCaps="false"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/transfer_value"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_ref_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:background="@drawable/shimmer_round"
                android:textColor="@color/black_app"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/check_value"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/transfer_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_14sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:background="@drawable/shimmer_round"
                android:textColor="@color/overdue_status_clr"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


    </LinearLayout>
</layout>