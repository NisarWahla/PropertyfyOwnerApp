<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.tenantDetailFragments.InformationTenantFragment">

        <RelativeLayout
            android:id="@+id/company_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:id="@+id/txtCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:text="@string/tenant_name"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_gray"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tenantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCompany"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:text="Sheikh Al Maktoum"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_black"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/company_layout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

        <RelativeLayout
            android:id="@+id/managerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_one"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:text="@string/property"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_gray"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/addressProperty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtManager"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:text="5 Bin Habis Street, Abu Dhabi, United Arab Emirates"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_black"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <View
            android:id="@+id/managerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/managerLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/managerView"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:text="@string/phone_number"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_gray"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/phoneValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPhone"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:text="maktoum@gmail.com"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_black"
                android:textSize="@dimen/_13sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnCallNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/call_now_style"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/call_now"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>


        <View
            android:id="@+id/emailView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/phoneLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

        <RelativeLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailView"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:text="@string/email"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_gray"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/emailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmail"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:text="maktoum@gmail.com"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_black"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <View
            android:id="@+id/phoneView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/emailLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneView"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:text="@string/country"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_gray"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/countryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_address"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/manrope_semibold"
                android:text="UAE"
                android:textAllCaps="false"
                android:textColor="@color/profile_text_black"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/address_layout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

    </RelativeLayout>
</layout>