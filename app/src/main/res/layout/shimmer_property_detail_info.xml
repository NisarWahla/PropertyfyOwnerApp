<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/property_images"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shimmer_round"
            android:fontFamily="@font/manrope_semibold"
            android:gravity="center"
            android:textColor="@color/black_app"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/property_id_value"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_images"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shimmer_round"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:textColor="@color/hint_text_color"
            android:textSize="@dimen/_14sdp" />

        <View
            android:id="@+id/view_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/property_id_value"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/info_line_color" />

        <TextView
            android:id="@+id/property_address"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_one"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shimmer_round"
            android:fontFamily="@font/manrope_semibold"
            android:gravity="center"
            android:textColor="@color/black_app"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/property_address_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_address"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shimmer_round"
            android:fontFamily="@font/manrope_medium"
            android:lines="2"
            android:textColor="@color/hint_text_color"
            android:textSize="@dimen/_14sdp" />

        <View
            android:id="@+id/view_eight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/property_address_value"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/info_line_color" />

        <LinearLayout
            android:id="@+id/bedLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/view_eight"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_bedrooms"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/shimmer_round"
                    android:fontFamily="@font/manrope_semibold"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/bedIcon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shimmer_round"
                    android:padding="@dimen/_2sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_bathrooms"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/shimmer_round"
                    android:fontFamily="@font/manrope_semibold"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/washIcon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shimmer_round"
                    android:padding="@dimen/_2sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_parking"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/shimmer_round"
                    android:fontFamily="@font/manrope_semibold"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/parkingIcon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shimmer_round"
                    android:padding="@dimen/_2sdp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/bedLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

        <RelativeLayout
            android:id="@+id/areaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_three"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtArea"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/shimmer_round"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center" />

            <TextView
                android:id="@+id/areaValue"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@id/txtArea"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shimmer_round" />
        </RelativeLayout>

        <View
            android:id="@+id/view_four"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/areaLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

        <RelativeLayout
            android:id="@+id/amenitiesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_four"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtAmenities"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/shimmer_round"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/txtAmenities"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view_five"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/amenitiesLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/profile_divider_color" />

        <RelativeLayout
            android:id="@+id/furnishingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_five"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtFurnishing"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/shimmer_round"
                android:fontFamily="@font/manrope_semibold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/txtFurnishing"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/shimmer_round"
                        android:fontFamily="@font/manrope_semibold"
                        android:gravity="center" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>